<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="@dimen/margin_default"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView android:id="@+id/imageCategories"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   tools:src="@drawable/ic_categories_black_24dp"/>

        <TextView android:id="@+id/nameCategory"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                android:gravity="center"
                  app:layout_constraintTop_toBottomOf="@+id/imageCategories"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:padding="@dimen/distance_tiny"
                  android:textSize="@dimen/size_text_medium"
                  android:textStyle="bold"
                  android:textAllCaps="true"

                  tools:text="Dummy categories"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>